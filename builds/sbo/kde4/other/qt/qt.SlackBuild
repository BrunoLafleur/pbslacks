# This script builds Qt, packages it without WebKit, upgrades the machine to
# a WebKit-less Qt, builds a WebKit package, merges the two packages.
# Then you will have to (re)install the new package.
#
# New version from Pierre Brochard (pierre.brochard.1982@m4x.org)

cd $(dirname $0) ; CWD=$(pwd)

PKGNAM=qt

# Versions, build and tag for combined qt4 and qt4webkit packages.
QTVERSION=$(ls qt-*.tar.?z* | rev | cut -f 3- -d . | cut -f 1 -d - | rev)
# Adjust the combined package $BUILD in qt-nowebkit.SlackBuild:
QTBUILD=$(grep BUILD= qt-nowebkit.SlackBuild | cut -f 2 -d - | cut -f 1 -d \})
QTTAG=$(grep TAG= qt-nowebkit.SlackBuild | cut -f 2 -d - | cut -f 1 -d \})

WEBKITNAM=qtwebkit
WEBKITVERSION=$(ls qtwebkit/qtwebkit-*.tar.?z* | rev | cut -f 3- -d . | cut -f 1 -d - | rev)
# This $BUILD doesn't really need to change as long as these are combined:
WEBKITBUILD=$(grep BUILD= qtwebkit/qtwebkit.SlackBuild | cut -f 2 -d - | cut -f 1 -d \})
WEBKITTAG=$(grep TAG= qtwebkit/qtwebkit.SlackBuild | cut -f 2 -d - | cut -f 1 -d \})

if [ -n "$BUILD" ]; then
    QTBUILD=$BUILD
    WEBKITBUILD=$BUILD
fi

TAG="${TAG-none}"
if [ "$TAG" != 'none' ]; then
    QTTAG=$TAG
    WEBKITTAG=$TAG
fi

PKGTYPE=${PKGTYPE:-txz}

# Automatically determine the architecture we're building on:
MARCH=$( uname -m )
if [ -z "$ARCH" ]; then
  case "$MARCH" in
    i?86)    export ARCH=i586 ;;
    armv7hl) export ARCH=$MARCH ;;
    arm*)    export ARCH=arm ;;
    # Unless $ARCH is already set, use uname -m for all other archs:
    *)       export ARCH=$MARCH ;;
  esac
fi

# If the variable PRINT_PACKAGE_NAME is set, then this script will report what
# the name of the created package would be, and then exit. This information
# could be useful to other scripts.
if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PKGNAM-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE"
  exit 0
fi

if [ "$ARCH" = "x86_64" ]; then
  LIBDIRSUFFIX="64"
else
  LIBDIRSUFFIX=""
fi

TMP=${TMP:-/tmp}
PKG=$TMP/package-${PKGNAM}
OUTPUT=${OUTPUT:-/tmp}

# Build Qt and package it without WebKit:
if [ ! -f "$OUTPUT/${PKGNAM}-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE" ] ;then
    sh ./qt-nowebkit.SlackBuild
    if [ ! -r $OUTPUT/${PKGNAM}-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE ]; then
	echo "FATAL:  Failed to build Qt package without WebKit."
	exit 1
    fi
fi

# Upgrade system to Qt (without WebKit):
/sbin/upgradepkg --reinstall --install-new \
		 $OUTPUT/${PKGNAM}-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE

# Build standalone WebKit package (qtwebkit):
rm -f $OUTPUT/${WEBKITNAM}-${WEBKITVERSION}-${ARCH}-${WEBKITBUILD}${WEBKITTAG}.$PKGTYPE
(
    cd qtwebkit
    sh ./qtwebkit.SlackBuild
)
if [ ! -r $OUTPUT/${WEBKITNAM}-${WEBKITVERSION}-${ARCH}-${WEBKITBUILD}${WEBKITTAG}.$PKGTYPE ]; then
  echo "FATAL:  Failed to build QtWebKit standalone package."
  exit 1
fi

# Combine the packages:
rm -rf $PKG
mkdir -p $PKG
( cd $PKG
  /sbin/explodepkg $OUTPUT/${WEBKITNAM}-${WEBKITVERSION}-${ARCH}-${WEBKITBUILD}${WEBKITTAG}.$PKGTYPE
  /sbin/explodepkg $OUTPUT/${PKGNAM}-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE
  cat $TMP/package-qtwebkit/install/doinst.sh | grep '^(' >> install/doinst.sh
  mv usr/doc/qtwebkit-* usr/doc/${PKGNAM}-*
  # Remove rpaths:
  for file in $(find . | xargs file | grep -e "executable" -e "shared object" | \
		    grep ELF | cut -f 1 -d : 2> /dev/null) ; do
    if [ ! "$(patchelf --print-rpath $file 2> /dev/null)" = "" ]; then
      patchelf --remove-rpath $file
    fi
  done
  # Don't ship .la files:
  rm -f usr/lib${LIBDIRSUFFIX}/*.la
  rm -f usr/lib${LIBDIRSUFFIX}/qt/lib/*.la
  /sbin/makepkg -l y -c n ../${PKGNAM}-${QTVERSION}-${ARCH}-${QTBUILD}${QTTAG}.$PKGTYPE
)

# Remove intermediate qtwebkit package:
rm -f $OUTPUT/${WEBKITNAM}-${WEBKITVERSION}-${ARCH}-${WEBKITBUILD}${WEBKITTAG}${WEBKITTAG}.$PKGTYPE
