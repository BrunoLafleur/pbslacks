# Function for purge html index.
xpurgeindex () {
    dir="$1"
    find "$dir" -name 'index.html*' -exec rm -f {} \;
    rm -f "$dir/robots.txt"*
    rm -f "$dir/"*"/robots.txt"*
}

# Get new version of a package in a repository.
xgetpac () {
    pac="$1"
    dir="$2"
    prof="$3"
    echo '------------------------------------'
    emygt "Package \$pac :"
    mv ../"$pac-[0-9]"* . 2> /dev/null
    wget -N -A "$pac"'-[0-9]*.t?z*' -r -nv -np -nH --cut-dir=$prof --no-check-certificate "$dir/"
    xpurgepac "$pac-[0-9]" t?z
    xpurgepac "$pac-[0-9]" t?z.asc
    xpurgepac "$pac-[0-9]" t?z.md5
    xpurgepac "$pac-[0-9]" t?z.sha256
}

# Get the original tarball with the slack build scripts.
xgetsrcpac () {
    pac="$1"
    dir="$2"
    prof="$3"
    wget -N -r -nv -np -nH --cut-dir=$prof --no-check-certificate "$dir/"
}

xgetsrcpac0 () {
    pac="$1"
    dir="$2"
    prof="$3"
    mkdir -p "$pac"
    (
	cd "$pac"
	xgetsrcpac "$pac" "$dir" $prof
    )
}

# Get a local copie of the original tarball with the slack build scripts.
xlocalsrcpac () {
    name="$1"
    path="$2"
    [ ! -d "$name" ] && mkdir "$name"
    cp -u "$PBDIRPROG/builds/sbo/${name}.tar.gz" "$name"
    if [ "$path" != '' ] ;then
      	emygt "Local copy of pbslacks/builds/sbo/\$path to \$name"
    	cp "$PBDIRPROG/builds/sbo/$path" "$name"
    fi
}

# Get static url.
xgeturl () {
    path="$1"
    echo '-------------------'
    echo "Getting $path :"
    wget -N -nv --content-disposition --no-check-certificate "$path"
    [ $? -ne 0 ] && wget -nv --content-disposition --no-check-certificate "$path"
}

# Get the original source tarball.
xgetsrc () {
    name="$1"
    path="$2"
    mv ../"$name-[0-9]"* . 2> /dev/null
    mv ../"$name" . 2> /dev/null
    [ ! -d "$name" ] && mkdir "$name"
    cp -u "$PBDIRPROG/builds/sbo/${name}.tar.gz" "$name"
    (
	cd "$name"
	xgeturl "$path"
	# For queries names.
	find . -name '*.t*z\?*'|while read i;test "$i" != "" ;do
	    j="$(echo "$i"|cut -d '?' -f1)"
	    mv "$i" "$j"
	done
    )
}

# Get the original source tarball with path in package.info.
xgetsbosrc () {
    name="$1"
    nocontentdisp="$2"
    info="$name/${name}.info"
    tar xfz "$PBDIRPROG/builds/sbo/${name}.tar.gz" "$info"
    # Get all links in DOWNLOAD= and DOWNLOAD_x86_64=
    # Works with multi-lines ending with '\'
    path=$(cat $info| tr '\n' '\f'|sed 's/ \\\f/ /g'|tr '\f' '\n' | \
	       fgrep DOWNLOAD|cut -d '=' -f2|cut -d '"' -f2|tr '\n' ' ')
    rm -f $info
    for i in $path ; do
	xgetsrc $name "$i"
    done
}
