#! /bin/sh

# Auteur : Pierre Brochard (pierre.brochard.1982@m4x.org)
# Date : 2019
# License : See the LICENSE file in this repository.

MYUSER=produits
MYGROUP=users

. "$(dirname $0)/pbinclude"
. "$(dirname $0)/pbaspireinc"

if [ ! $UID = 0 ]; then
    mygt 'This script must be run as root.'
    exit 1
fi

xhelp () {
    mygt 'Launch this script in the directory including bumblebee.'
}

if [ ! -d bumblebee ] ;then
    xhelp
    exit 1
fi

MYPWD=$(pwd)
HOMESLACK="$MYPWD"

mygt 'Redo the Bumblebee Slackware packages.\nIf already done on an upgraded host use the packages already generated with upgradebumblebee.'

export UPDATE=no
rm -rf ~/Bumblebee-SlackBuilds

if [ -f "$HOMESLACK/bumblebee/Crazybee/Bumblebee-SlackBuilds.tgz" ] ;then
    cd 
    tar xvfz "$HOMESLACK/bumblebee/Crazybee/Bumblebee-SlackBuilds.tgz"
    export UPDATE=no
    cd Bumblebee-SlackBuilds
    sh ./crazybee.sh
else
    sh "$HOMESLACK/bumblebee/crazybee.sh"
fi

cd "$HOMESLACK/bumblebee"
cp ~/Bumblebee-SlackBuilds/nouveau-blacklist/xf86-video-nouveau-blacklist-noarch-1.t?z .

for i in libbsd primus bbswitch nvidia-bumblebee bumblebee nvidia-kernel ;do
    cp "/tmp/${i}-"*.t?z .
    xpurgepac "${i}-" t?z
done
chown ${MYUSER}.$MYGROUP *.t?z

[ -x /etc/rc.d/rc.bumblebee ] && /etc/rc.d/rc.bumbleebee restart
