#! /bin/sh

# Auteur : Pierre Brochard (pierre.brochard.1982@m4x.org)
# Date : 2019
# License : See the LICENSE file in this repository.

# Recompilations a faire apres reboot.

if [ ! $UID = 0 ]; then
  cat << EOF
This script must be run as root.
EOF
  exit 1
fi

. "$(dirname $0)/pbinclude"

xhelp () {
    mygt 'Launch this script in the directory including packages, packages2 et al.'
}

if [ ! -d packages -o ! -d packages2 -o ! -d packages3 -o ! -d packages4 ] ;then
    xhelp
    exit 1
fi

MYUSER=produits
MYGROUP=users
RECOMP=1

while [ $# -ge 1 ] ;do
    MYARG="$1"
    if [ "$MYARG" = "-u" ] ;then
	shift
	MYUSER="$1"
    elif [ "$MYARG" = "-g" ] ;then
	shift
	MYGROUP="$1"
    elif [ "$MYARG" = "-norecomp" ] ;then
        RECOMP=0
    elif [ "$MYARG" = "-help" -o "$MYARG" = "-h" ] ;then
	xhelp
	exit 0
    fi
    shift
done

cat <<EOF
A lancer seulement apres la mise a jour du systeme et son redemarrage.
Si deja fait sur une machine a jour, il n'est pas utile de relancer ce script.
Appuyer sur une touche pour continuer sinon CTRLc pour arreter
Press a touch for continue or abort.
EOF
read c

xmakealienpac () {
    XDIR="$1"
    pac="$2"
    if [ $RECOMP -eq 1 -a -d "${XDIR}/$pac" ] ;then
	cd "${XDIR}/$pac"
	sh "./${pac}.SlackBuild"
	cp "/tmp/${pac}-"*.t?z ..
	cd ../..
    fi
}

xmakepac () {
    XDIR="$1"
    XPAC="$2"
    XSUB="$3"

    if [ $RECOMP -eq 1 ] ;then
      cd ${XDIR}/$XPAC
      tar xvfz ${XPAC}.t*gz
      if [ -d "$XPAC" ] ;then
	  cd $XPAC
	  ./${XPAC}.SlackBuild
	  cp /tmp/${XPAC}-*.t?z ../..
	  if [ $? -ne 0 ] ;then
	      echo 'Erreur a corriger puis relancer ce script.'
	      echo 'Correct this error and relaunch this script.'
	      exit 1
	  fi
	  cd ..;rm -rf $XPAC
      fi
      cd ../..
      chown ${MYUSER}.$MYGROUP $XDIR/${XPAC}-*.t?z
      rm -f /tmp/${XPAC}-*.t?z
      if [ "$XSUB" != '' ] ;then
        mv $XDIR/${XPAC}-*i486*.t?z $XDIR/$XSUB
      fi
    fi
    if [ "$XSUB" = '' ] ;then
      upgradepkg --reinstall $XDIR/${XPAC}-*.t?z
      rm -f /usr/lib64/lib*.la
    fi
}

rm -f /usr/lib64/lib*.la

# Binding python et pas python3 pour openshot.
# Et le mlt.SlackBuild importe dans python et pas python3 (PYTHONSITEPKG).
export PYTHON=python
export BUILD=3alien
xmakealienpac packages mlt
unset PYTHON
unset BUILD

for i in OpenAL libtxc_dxtn libgaminggear python-pillow ;do
    xmakepac packages $i
done
for i in roccat-tools kmplayer denemo guile2.2 ;do
    xmakepac packages2 $i
done
for i in bsddb3 db53 pyicu gramps ;do
    xmakepac packages3 $i
done
for i in xrdp xorgxrdp SFML wxGTK3 vbam fbida kaffeine opencv ;do
    xmakepac packages4 $i
done

export ARCH=i486
for i in OpenAL libtxc_dxtn ;do
    xmakepac packages $i 32
done
unset ARCH

cd packages/32
for i in cabextract libdvdcss icoutils wxPython OpenAL libtxc_dxtn ;do
    if [ $RECOMP -eq 1 ] ;then
      convertpkg-compat32 -i "$i-"'*.t?z' -d ../compat32
      chown ${MYUSER}.$MYGROUP ../compat32/$i-compat32-*.t?z
    fi
    upgradepkg --reinstall ../compat32/$i-compat32-*.t?z
    rm -f /usr/lib/lib*.la
done
cd ../..

echo "Upgrade packages* fait."
